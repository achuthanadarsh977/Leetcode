var longestCommonPrefix = function(strs) {
    if (!strs.length) return ""; // If array is empty

    for (let i = 0; i < strs[0].length; i++) {
        let char = strs[0][i]; // Take each character from first string
        for (let s of strs) {
            if (i === s.length || s[i] !== char) {
                // Stop if one string is shorter or mismatch found
                return strs[0].slice(0, i);
            }
        }
    }
    return strs[0]; // Whole first string is common prefix
};

// Example usage:
console.log(longestCommonPrefix(["flower","flow","flight"])); // "fl"
console.log(longestCommonPrefix(["dog","racecar","car"])); // ""
